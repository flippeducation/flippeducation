<% if (query && query.success) { %>
	<% let succ = query.success; %>
	<div class="pure-g flash">
		<div class="pure-u-1 pure-u-md-2-24"></div>
		<div class="pure-u-1 pure-u-md-20-24 main">
			<%= succ === "true" ? __("Video submission successful")
				: __("Video submission unsuccessful: %s", succ) %>
		</div>
		<div class="pure-u-1 pure-u-md-2-24"></div>
	</div>
<% } %>
